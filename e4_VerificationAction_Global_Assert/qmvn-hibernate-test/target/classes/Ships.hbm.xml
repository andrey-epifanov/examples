<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Ships" table="Ships">
        <meta attribute="class-description">
            This class contains the ships detail.
        </meta>
        <id name="name" type="string" column="name">
            <!--<generator class="native"/>-->
        </id>
        <!--<property name="classvalue" column="classvalue" type="string"/>-->
        <property name="classValue" column="class" type="string"/>
        <property name="launched" column="launched" type="short"/>
    </class>
</hibernate-mapping>